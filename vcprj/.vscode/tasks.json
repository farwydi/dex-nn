    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "build",
            "type": "process",
            "command": "./build.sh",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "taskName": "build test",
            "type": "shell",
            "command": "g++",
            "args": [
                "-c",
                "-o",
                "tmp/test.o",
                "nn/test.cpp"
            ]
        },
        {
            "taskName": "build connect",
            "type": "shell",
            "command": "g++",
            "args": [
                "-c",
                "-o",
                "tmp/connect.o",
                "nn/connect.cpp"
            ]
        },
        {
            "taskName": "build neuron",
            "type": "shell",
            "command": "g++",
            "args": [
                "-c",
                "-o",
                "tmp/neuron.o",
                "nn/neuron.cpp"
            ]
        },
        {
            "taskName": "build nn",
            "type": "shell",
            "command": "g++",
            "args": [
                "-c",
                "-o",
                "tmp/nn.o",
                "nn/nn.cpp"
            ]
        }
    ]
}